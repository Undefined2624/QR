@model QRMascotas.context.Mascota

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Scanme</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QRMascotas.styles.css" asp-append-version="true" />
</head>

<body>
    <h4 class="mt-2 text-center">Eliminar mascota <i class="fa-solid fa-circle-minus" style="color: #d93e17;"></i></h4>

    <h5 class="text-center">¿Está seguro de que desea eliminar a @Html.DisplayFor(model => model.Nombre) de sus mascotas?</h5>


     <form asp-action="Delete">
        <input type="hidden" asp-for="IdDuenoAlternativo" />
        <input type="hidden" asp-for="IdMascota"/>

        <div class="form-group d-flex justify-content-center">
            <div class="form-group text-center me-2">
                <button type="button" class="btn btn-outline-primary mb-1 align-items-center" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
            </div>
            <div class="form-group text-center">
                <button type="submit" value="Delete" class="btn btn-danger mb-1 align-items-center">Sí, Eliminar</button>
            </div>
        </div>
    </form>

</body>
</html>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="~/js/JavaScript.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}
